{
    "mcpServers": {
        "mcp-odoo-panda": {
            "command": "/usr/bin/python3",
            "args": [
                "--directory",
                "/mnt/c/Users/Paolo/Documents/Paolo/mcp-odoo-panda",
                "mcp/server.py",
                "--config",
                "/mnt/c/Users/Paolo/Documents/Paolo/mcp-odoo-panda/odoo_mcp/config/config.json"
            ]
        }
    },
    "odoo_url": "http://localhost:8069",
    "database": "your_db",
    "username": "your_user",
    "api_key": "your_password",
    "protocol": "jsonrpc",
    "connection_type": "streamable_http",
    "log_level": "INFO",
    "requests_per_minute": 120,
    "rate_limit_max_wait_seconds": 60,
    "pool_size": 10,
    "timeout": 30,
    "session_timeout_minutes": 60,
    "pii_masking": true,
    "rate_limit_per_minute": 60,
    "rate_limit_burst": 100,
    "audit_logging": true,
    "implicit_domains": true,
    "max_payload_size": 1048576,
    "max_fields_limit": 100,
    "max_records_limit": 200,
    "schema_cache_ttl": 600,
    "actions_registry": "./config/actions_registry.yaml",
    "http": {
        "host": "0.0.0.0",
        "port": 8080,
        "streamable": true
    },
    "logging": {
        "level": "DEBUG",
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "handlers": [
            {
                "type": "StreamHandler",
                "level": "DEBUG"
            },
            {
                "type": "FileHandler",
                "filename": "mcp_server.log",
                "level": "DEBUG"
            }
        ]
    }
} 